input[type="text"]
	height: 29px

#challenges-sidebar
	top: 40px
	left: 0
	padding: 20px
	background: #efefef
	height: 100%
	box-shadow: 1px 0 6px 0 #aaa

.new-challenge-form
	input[type="text"], textarea
		width: 97%

	button
		margin-top: 18px

#challenges-container
	width: 100%

	.dataTables_wrapper
		.toolbar-container
			float: left
			position: relative
			top: 20px

	.dataTables_filter
		float: right
		margin: 10px 0

		label input[type='text']
			position: relative
			top: 4px

		input[type='text']
			margin-left: 5px

	table
		thead tr th
			font-weight: bold

			&:hover
				cursor: pointer

			&.action
				width: 2%
			&.name
				width: 20%
			&.category
				width: 15%
			&.points
				width: 10%
			&.description
				width: 25%
			&.target
				width: 25%
			&.status
				width: 3%

		tbody tr td
			white-space: nowrap
			overflow: hidden

			input[type='checkbox']
				position: relative
				top: -3px

			.icon-lock, .icon-unlock
				position: relative
				left: 12px

			.icon-lock
				opacity: 0.3

			.icon-unlock
				opacity: 0.6

.toolbar
	.toolbar-btn
		display: inline
		padding: 6px 10px
		background-color: #f1f1f1
		cursor: default
		opacity: 0.5
		cursor: pointer

		&:hover
			box-shadow: inset 0 0 1px rgba(0, 0, 0, 0.1)
			opacity: 1

	.toolbar-btn:nth-child(1), .toolbar-btn:nth-child(3)
		border: 1px solid rgba(0, 0, 0, 0.1)

	.toolbar-btn:nth-child(1)
		border-radius 2px 0px 0px 2px

	.toolbar-btn:nth-child(3)
		border-radius 0px 2px 2px 0px

	.toolbar-btn:nth-child(2)
		border-top: 1px solid rgba(0, 0, 0, 0.1)
		border-bottom: 1px solid rgba(0, 0, 0, 0.1)

		&:hover
			box-shadow: inset 0 0 1px rgba(0, 0, 0, 0.1)
