// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/

*
  box-sizing: border-box

i.icon-lock
	background-image: url('../img/glyphicons.png')
	background-size: 169px
	background-position: -72px -382px

i.icon-unlock
	background-image: url('../img/glyphicons.png')
	background-size: 183px
	background-position: -79px -435px

#loading-emblem
  width: 214px
  margin: 15% auto auto auto
  animation: 1.5s pulse infinite

@keyframes pulse
  0%
    -webkit-transform: scale(0.7, 0.7)
    opacity: 0.5
  15%
    -webkit-transform: scale(1.0, 1.0)
    opacity: 1.0
  20%
    -webkit-transform: scale(0.9, 0.9)
    opacity: 0.9
  35%
    -webkit-transform: scale(1.0, 1.0)
    opacity: 1.0
  100%
    -webkit-transform: scale(0.7, 0.7)
    opacity: 0.5
